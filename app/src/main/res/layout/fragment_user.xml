<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            tools:context=".ui.user.UserFragment"
            android:paddingTop="10dp">
    <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity=""
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

        <LinearLayout
                android:id="@+id/layout_user"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
            <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_user_user_24dp"/>
            <TextView
                    android:text="未登录"
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/username"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
            />
            <ImageView
                    android:src="@drawable/ic_user_arrowright_24dp"
                    android:scaleType="fitCenter"
                    android:layout_width="15dp"
                    android:layout_height="15dp" android:id="@+id/user_rightarrow"/>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="@dimen/rounded_corner_card"
                app:cardElevation="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">
            <ImageView
                    android:id="@+id/background"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_party_24dp"
                    android:translationX="200dp"
                    android:translationY="-60dp"
                    android:alpha="0.3"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                <TextView
                        android:text="学习古文"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/text_learn_article"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:text="0 "
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/article_num"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:text="学习天数"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/text_learn_day"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:text="0 "
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/day_num"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_width="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/rounded_corner_card"
                app:cardElevation="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">
            <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="">
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPadding="20dp"
                        app:rippleColor="@color/grey"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:id="@+id/layout_my_book">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">
                        <ImageView
                                android:src="@drawable/ic_user_book_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="我的图书"
                                android:layout_marginStart="10dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:id="@+id/text_my_book"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_width="0dp"/>
                        <ImageView
                                android:src="@drawable/ic_user_arrowright_24dp"
                                android:scaleType="fitCenter"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPadding="20dp"
                        app:rippleColor="@color/grey"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:id="@+id/layout_my_star">
                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">
                        <ImageView
                                android:src="@drawable/ic_user_star_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="我的收藏"
                                android:layout_marginStart="10dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:id="@+id/text_my_star"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_width="0dp"/>
                        <ImageView
                                android:src="@drawable/ic_user_arrowright_24dp"
                                android:scaleType="fitCenter"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/rounded_corner_card"
                app:cardElevation="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">
            <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="">
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPadding="20dp"
                        app:rippleColor="@color/grey"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:id="@+id/layout_dark_mode">
                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">
                        <ImageView
                                android:src="@drawable/ic_user_moon_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="夜间模式"
                                android:layout_marginStart="10dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:id="@+id/text_dark_mode"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_width="0dp"/>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/dark_mode_switch"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPadding="20dp"
                        app:rippleColor="@color/grey"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:id="@+id/layout_help">
                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">
                        <ImageView
                                android:src="@drawable/ic_user_help_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="帮助与反馈"
                                android:layout_marginStart="10dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:id="@+id/text_help"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_width="0dp"/>
                        <ImageView
                                android:src="@drawable/ic_user_arrowright_24dp"
                                android:scaleType="fitCenter"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"/>
    </LinearLayout>
</ScrollView>
